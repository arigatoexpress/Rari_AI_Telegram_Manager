# Telegram Manager Bot - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Telegram Configuration
# =============================================================================

# Get these from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=your_phone_number_here

# Your Telegram user ID (get from @userinfobot)
USER_ID=your_user_id_here

# =============================================================================
# AI BACKEND CONFIGURATION
# =============================================================================

# Choose your AI backend: ollama, atoma, openai, or unified (auto-select)
AI_BACKEND=unified

# Ollama Configuration (Local AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=30

# Atoma Configuration (DePIN Network)
ATOMA_API_KEY=your_atoma_api_key_here
ATOMA_BASE_URL=https://api.atoma.ai
ATOMA_MODEL=llama3.2

# OpenAI Configuration (Cloud AI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Nosana Configuration (GPU Compute)
NOSANA_API_KEY=your_nosana_api_key_here
NOSANA_PROJECT_ID=your_project_id_here
NOSANA_REGION=us-east-1

# Akash Configuration (Alternative DePIN)
AKASH_KEY_NAME=your_key_name
AKASH_NODE=https://rpc.akash.forbole.com:443

# Docker Configuration
DOCKER_IMAGE_NAME=telegram-manager-bot
DOCKER_TAG=latest
DOCKER_PORT=8000

# =============================================================================
# GOOGLE SHEETS INTEGRATION (Optional)
# =============================================================================

# Path to your Google service account JSON file
GOOGLE_SERVICE_ACCOUNT_FILE=service_account.json

# Your Google Sheets spreadsheet ID (from URL)
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# Google Sheets worksheet names
GOOGLE_SHEET_BUSINESS_BRIEFS=Business Briefs
GOOGLE_SHEET_LEADS=Leads
GOOGLE_SHEET_ANALYTICS=Analytics

# =============================================================================
# TEAM MANAGEMENT & SECURITY
# =============================================================================

# Secret key for JWT tokens and encryption
SECRET_KEY=your_secret_key_here

# Team access configuration
TEAM_ACCESS_ENABLED=true
TEAM_API_RATE_LIMIT=100
TEAM_SESSION_TIMEOUT=3600

# Whitelist configuration
WHITELIST_ENABLED=true
WHITELIST_FILE=team_members.json

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=bot.log

# Enable debug mode
DEBUG=false

# Performance monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# BUSINESS INTELLIGENCE
# =============================================================================

# Business context for AI responses
BUSINESS_CONTEXT_FILE=context.example.md

# Lead scoring configuration
LEAD_SCORE_THRESHOLD=7.0
LEAD_PRIORITY_HIGH=9.0
LEAD_PRIORITY_MEDIUM=6.0

# Summary configuration
SUMMARY_MAX_LENGTH=500
SUMMARY_INCLUDE_INSIGHTS=true
SUMMARY_INCLUDE_ACTION_ITEMS=true

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Cache configuration
ENABLE_CACHE=true
CACHE_TTL=3600

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================

# Email notifications (if configured)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Telegram notifications
TELEGRAM_NOTIFICATIONS_ENABLED=true
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id

# Webhook notifications
WEBHOOK_URL=your_webhook_url_here
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom AI prompts
CUSTOM_PROMPT_BUSINESS_BRIEF=Generate a professional business brief for the following conversation:
CUSTOM_PROMPT_LEAD_ANALYSIS=Analyze this conversation for potential business leads:
CUSTOM_PROMPT_SUMMARY=Create a concise summary of this conversation:

# Model parameters
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_FREQUENCY_PENALTY=0.0
AI_PRESENCE_PENALTY=0.0

# Backup configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=7

# Auto-update configuration
AUTO_UPDATE_ENABLED=true
AUTO_UPDATE_CHECK_INTERVAL=86400

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test mode
TEST_MODE=false
TEST_TELEGRAM_CHAT_ID=your_test_chat_id

# Mock AI responses for testing
MOCK_AI_RESPONSES=false

# Development server
DEV_SERVER_HOST=localhost
DEV_SERVER_PORT=8000

# =============================================================================
# INTEGRATION WEBHOOKS
# =============================================================================

# Slack integration
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#general

# Discord integration
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Zapier integration
ZAPIER_WEBHOOK_URL=your_zapier_webhook_url

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# Data retention (days)
DATA_RETENTION_DAYS=90

# GDPR compliance
GDPR_COMPLIANCE_ENABLED=true
GDPR_DATA_EXPORT_ENABLED=true
GDPR_DATA_DELETION_ENABLED=true

# Encryption
ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM=AES-256-GCM

# =============================================================================
# CUSTOM INTEGRATIONS
# =============================================================================

# Custom API endpoints
CUSTOM_API_BASE_URL=your_custom_api_url
CUSTOM_API_KEY=your_custom_api_key

# Third-party services
THIRD_PARTY_SERVICE_1_URL=your_service_1_url
THIRD_PARTY_SERVICE_1_KEY=your_service_1_key
THIRD_PARTY_SERVICE_2_URL=your_service_2_url
THIRD_PARTY_SERVICE_2_KEY=your_service_2_key

# =============================================================================
# DEPLOYMENT-SPECIFIC OVERRIDES
# =============================================================================

# Override settings for specific deployments
# Uncomment and modify as needed

# For Nosana deployment
# NOSANA_GPU_MODEL=RTX 3090
# NOSANA_GPU_MEMORY=24GB
# NOSANA_CPU_CORES=8
# NOSANA_RAM=32GB

# For Docker deployment
# DOCKER_NETWORK=bridge
# DOCKER_VOLUME_PATH=/app/data

# For local development
# LOCAL_DEBUG=true
# LOCAL_PORT=8000
# LOCAL_HOST=127.0.0.1

# =============================================================================
# NOTES & COMMENTS
# =============================================================================

# This file contains all possible configuration options
# Remove or comment out any variables you don't need
# Keep sensitive information secure and never commit .env to version control

# For help with configuration, see README_UNIFIED.md
# For deployment options, run: python deploy_all_options.py