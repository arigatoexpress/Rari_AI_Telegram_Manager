{
    "system": {
        "name": "Telegram Manager Bot v2.0",
        "version": "2.0.0",
        "auto_update_enabled": true,
        "ai_optimization_enabled": true,
        "performance_monitoring_enabled": true,
        "health_check_interval": 300,
        "startup_timeout": 60,
        "retry_attempts": 3,
        "fallback_mode": true
    },
    "updates": {
        "update_interval_hours": 24,
        "backup_before_update": true,
        "max_backups": 10,
        "update_sources": [
            "https://api.github.com/repos/your-repo/releases/latest"
        ],
        "excluded_files": [
            ".env",
            "config/",
            "data/",
            "logs/",
            "backups/",
            "ai_cache/"
        ],
        "differential_updates": {
            "enabled": true,
            "patch_size_limit_mb": 50,
            "compression_enabled": true,
            "checksum_validation": true
        }
    },
    "ai_optimization": {
        "cache_size": 1000,
        "cache_ttl_hours": 24,
        "batch_size": 10,
        "batch_timeout": 5.0,
        "response_timeout": 30,
        "max_retries": 3,
        "enable_caching": true,
        "enable_batching": true,
        "enable_response_optimization": true,
        "performance_monitoring": true,
        "adaptive_optimization": {
            "enabled": true,
            "adjustment_interval_hours": 6,
            "performance_thresholds": {
                "cache_hit_rate_min": 0.3,
                "response_time_max": 5.0,
                "error_rate_max": 0.1
            }
        },
        "models": {
            "default": "llama3.2",
            "fallback": "llama2",
            "optimization": "llama3.2",
            "batch_processing": "llama3.2"
        }
    },
    "database": {
        "optimization_enabled": true,
        "vacuum_interval_hours": 168,
        "index_optimization": true,
        "connection_pool_size": 5,
        "cache_size": 10000,
        "wal_mode": true,
        "synchronous": "NORMAL",
        "temp_store": "MEMORY",
        "auto_vacuum": true,
        "integrity_check": {
            "enabled": true,
            "interval_hours": 24
        }
    },
    "performance": {
        "monitoring_enabled": true,
        "metrics_collection_interval": 60,
        "max_metrics_history": 1000,
        "alerts": {
            "enabled": true,
            "cpu_threshold": 80,
            "memory_threshold": 85,
            "disk_threshold": 90,
            "response_time_threshold": 10
        },
        "optimization": {
            "auto_optimize": true,
            "optimization_interval_hours": 12,
            "resource_cleanup": true
        }
    },
    "security": {
        "encryption_enabled": true,
        "backup_encryption": true,
        "api_key_rotation": {
            "enabled": true,
            "rotation_interval_days": 30
        },
        "access_control": {
            "whitelist_enabled": true,
            "rate_limiting": true,
            "max_requests_per_minute": 60
        }
    },
    "logging": {
        "level": "INFO",
        "file_rotation": {
            "enabled": true,
            "max_size_mb": 10,
            "backup_count": 5
        },
        "performance_logging": true,
        "error_tracking": true
    },
    "maintenance": {
        "auto_maintenance": true,
        "maintenance_window": {
            "enabled": true,
            "start_hour": 2,
            "end_hour": 4,
            "timezone": "UTC"
        },
        "cleanup_tasks": {
            "old_logs": {
                "enabled": true,
                "retention_days": 30
            },
            "old_backups": {
                "enabled": true,
                "retention_days": 90
            },
            "old_cache": {
                "enabled": true,
                "retention_hours": 168
            }
        }
    },
    "telegram": {
        "bot_settings": {
            "webhook_enabled": false,
            "polling_timeout": 30,
            "max_connections": 100,
            "connection_pool_size": 10
        },
        "message_handling": {
            "async_processing": true,
            "batch_size": 50,
            "processing_interval": 5.0,
            "max_queue_size": 1000
        },
        "ai_integration": {
            "enhanced_analyzer": true,
            "automated_analysis": true,
            "real_time_insights": true
        }
    },
    "notifications": {
        "enabled": true,
        "channels": {
            "telegram": true,
            "email": false,
            "webhook": false
        },
        "events": {
            "update_available": true,
            "update_applied": true,
            "maintenance_completed": true,
            "error_occurred": true,
            "performance_alert": true
        }
    },
    "backup": {
        "strategy": "incremental",
        "compression": true,
        "encryption": true,
        "verification": true,
        "retention": {
            "daily": 7,
            "weekly": 4,
            "monthly": 12
        },
        "storage": {
            "local": true,
            "cloud": false,
            "encrypted": true
        }
    },
    "monitoring": {
        "health_checks": {
            "enabled": true,
            "interval_seconds": 300,
            "timeout_seconds": 30
        },
        "metrics": {
            "system": true,
            "application": true,
            "database": true,
            "ai": true,
            "telegram": true
        },
        "dashboards": {
            "enabled": true,
            "auto_refresh": true,
            "refresh_interval": 60
        }
    }
}